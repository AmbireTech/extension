{
  "name": "Ambire Wallet",
  "description": "The Web3 wallet that speaks human",
  "version": "1.0",
  "manifest_version": 3,
  "short_name": "Ambire",
  "permissions": ["storage", "tabs", "notifications"],
  "background": {
    "service_worker": "services/background.js",
    "type": "module"
  },
  "icons": {
    "128": "./assets/images/xicon.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "host_permissions": ["https://*/"],
  "externally_connectable": {
    "ids": ["*"]
  },
  "content_scripts" : [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://doInWebPack.lan/*"],
      "run_at": "document_start",
      "js": ["services/injection.js"]
    },
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://doInWebPack.lan/*"],
      "run_at": "document_start",
      "js": ["services/content-script.js"]
    },
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://doInWebPack.lan/*"],
      "run_at": "document_end",
      "js": ["services/content-script-onComplete.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["<all_urls>"],
      "extension_ids": []
    }
  ]
}
