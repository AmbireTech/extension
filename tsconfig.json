{
  "extends": "ambire-common/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-native",
    "module": "ESNext",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@modules/*": ["src/modules/*"],
      "@config/*": ["src/config/*"],
      "@web/*": ["web/*"]
    }
  },
  "exclude": [
    "node_modules",
    "ios",
    "android",
    "webkit-dev",
    "webkit-prod",
    "gecko-dev",
    "gecko-prod",
    "coverage",
    ".expo",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "index.js"
  ]
}
